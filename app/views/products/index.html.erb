<h1> All Products </h1>
    <% @products.each do |product| %>
        <%= product.name %><br>
        <%= product.craft %><br>
        <% if product.avatar.attached? %>
         <image  src="<%=(url_for(product.avatar)) %>", style="height: 500px; width: 500px; float: right; border:5px solid black;" ><br>
        <%= product.description %><br>
        <%= product.price %>
       
    <% end %>
    <% end %>